<?xml version="1.0"?>
<launch>
    <!-- configuration for the network -->
    <rosparam param="/uwb_driver_node/nodesId"> [100, 101, 102, 103, 200, 201, 202, 203]</rosparam>
    <rosparam param="/uwb_driver_node/nodesPos"> [0, 0, -0.53, 9999, 0, -2.0, 9999, 9999, -0.54, 9999, 9999, -2.1, 9999, 9999, 9999, 9999, 9999, 9999, 9999, 9999, 9999, 9999, 9999, 9999]</rosparam>
    <rosparam param="/uwb_driver_node/albega"> [1.0, 0.0, 200]</rosparam>
    
    <node respawn="true" pkg="uwb_driver" type="uwb_driver_node" name="uwb_driver_node" output="screen">
        <!-- configuration for the node -->
        <param name="p4xxQueryRate" type="int" value="100"/>
        <param name="reportRate" type="int" value="100"/>
        <param name="restEnable" type="bool" value="false"/>
        <param name="ignrTimeoutUwbInit" type="bool" value="true"/>
        <param name="publishUwbInfo" type="bool" value="true"/>

        <!-- configuration for the p4xx -->
        <param name="p4xxInterfaceChoice" type="int" value="1"/>
        <param name="p4xxSerialPort" type="string" value="103" />
        <param name="p4xxMode" type="int" value="0" />
        <param name="autoConfigRn" type="bool" value="true" />
        <param name="smFileName" value="/home/ubuntu/slotmaps/sm4x4as/103.csv" />
    </node>
  
</launch>
